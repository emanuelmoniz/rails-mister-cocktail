<div class="container">
  <div class="card cocktail-header">
    <h3><%= @cocktail.name %></h3>
  </div>
  <div class="cocktail-container">
    <div id="cocktail-image" class="col-xs-12 col-md-4" style="background-image: url('<%= cl_image_path @cocktail.photo %>')">
    </div>
    <div class="card cocktail-info col-xs-12 col-md-8">
      <div class="cocktail-description col-xs-12 col-md-6">
        <h4>Ingredients:</h4>
        <% @cocktail.doses.each do |dose| %>
          <div class="ingredient-container">
            <p><%= "#{dose.ingredient.name} - #{dose.description}" %></p>
            <div class="ingridient-actions"><%= link_to 'Delete', dose_path(dose), method: 'delete' %></div>
          </div>
        <% end %>
      </div>
      <div class="cocktail-ingredient-form col-xs-12 col-md-6">
        <h4>Add New Ingredient:</h4>
        <%= render 'doses/form', object: @dose %>
      </div>
    </div>
  </div>
</div>
